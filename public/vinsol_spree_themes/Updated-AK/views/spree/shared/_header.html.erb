<div id="spree-header" class="header-section">
  <header id="header" data-hook>
    <div class="header-top-bar">
      <div class="container">
        <div class="row">
          <div class="col-sm-6">Welcome to the SpreeTheme</div>
          <div class="col-sm-6">
            <%= render partial: 'spree/shared/nav_bar' %>
          </div>
        </div>
      </div>
    </div>

    <div class="header-bottom-section">
      <div class="container">
        <div class="row">
          <div id="logo" class="col-sm-4 header-logo-section" data-hook>
            <div class="row">
              <div class="col-xs-6">
                <a href="/" class="header-logo">Spree<b>Theme</b></a>
              </div>
              <div class="col-xs-6 text-right header-mobile-menu-block">
                &nbsp;
              </div>
            </div>
          </div>

          <div class="col-sm-8 header-search-block">
            <%= render partial: 'spree/shared/main_nav_bar' if store_menu? %>
          </div>
        </div>
      </div>
    </div>
  </header>
</div>
